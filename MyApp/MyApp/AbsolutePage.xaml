<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.AbsolutePage">

    <AbsoluteLayout BackgroundColor="Yellow">

        <Button Text="Button"
                BackgroundColor="Red"
                AbsoluteLayout.LayoutBounds="50,100,100,50"/>

        <Button Text="Button"
                BackgroundColor="#A000FF00"
                AbsoluteLayout.LayoutBounds="100,120,100,50"
                Opacity="1"/>

        <Button Text="Button"
                BackgroundColor="Blue"
                AbsoluteLayout.LayoutBounds="0.98,0.98,100,50"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>
    
</ContentPage>